	author = {Albani, Abderrazak El and Bengtson, Stefan and Canfield, Donald E. and Bekker, Andrey and Macchiarelli, Roberto and Mazurier, Arnaud and Hammarlund, Emma U. and Boulvais, Philippe and Dupuy, Jean-Jacques and Fontaine, Claude and Fürsich, Franz T. and Gauthier-Lafaye, François and Janvier, Philippe and Javaux, Emmanuelle and Ossa, Frantz Ossa and Pierson-Wickmann, Anne-Catherine and Riboulleau, Armelle and Sardini, Paul and Vachard, Daniel and Whitehouse, Martin and Meunier, Alain},
	month = jul,
